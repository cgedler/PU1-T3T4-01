<!DOCTYPE html>
<html lang="en">
<%- include('../shared/head'); %>
<body>
<%- include('../shared/header'); %>
<div class="container">
<form method="POST" action="/customers/<%= results.id %>">
    <!-- Name input -->
    <div class="form-group">
        <input name="name" id="name" type="text" class="form-control" value="<%= results.name %>"/>
        <label class="form-label">Name</label>
    </div>

    <!-- SurName input -->
    <div class="form-group">
        <input name="surname" id="surname" type="text" class="form-control" value="<%= results.surname %>"/>
        <label class="form-label">Surname</label>
    </div>

    <!-- Phone input -->
    <div class="form-group">
        <input name="phone" id="phone" type="text" class="form-control" value="<%= results.phone %>"/>
        <label class="form-label">Phone</label>
    </div>

    <!-- Email input -->
    <div class="form-group">
        <input name="email" id="email" type="text" class="form-control" value="<%= results.email %>"/>
        <label class="form-label">Email</label>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>
<%- include('../shared/footer'); %>
</body>
</html>
